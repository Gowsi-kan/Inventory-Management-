<MudPaper Class="number-pad">
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h5" Class="number-display">@DisplayValue</MudText>
        </MudItem>

        @foreach (var row in KeypadLayout)
        {
            <MudItem xs="12" Class="number-row">
                @foreach (var key in row)
                {
                    <MudButton OnClick="() => OnKeyPress(key)" Class="num-btn">
                        @key
                    </MudButton>
                }
            </MudItem>
        }
    </MudGrid>
</MudPaper>

@code {
    [Parameter] public EventCallback<string> OnNumberEntered { get; set; }

    private string DisplayValue { get; set; } = "";

    private readonly List<List<string>> KeypadLayout = new()
    {
        new() { "1", "2", "3" },
        new() { "4", "5", "6" },
        new() { "7", "8", "9" },
        new() { "0", "⌫", "✔" }
    };

    private void OnKeyPress(string key)
    {
        if (key == "⌫" && DisplayValue.Length > 0)
        {
            DisplayValue = DisplayValue[..^1];
        }
        else if (key == "✔")
        {
            OnNumberEntered.InvokeAsync(DisplayValue);
        }
        else if (key != "⌫" && key != "✔")
        {
            DisplayValue += key;
        }
    }
}

<style>
    .number-pad {
        max-width: 300px;
        margin: auto;
        padding: 16px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .number-display {
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        padding: 10px;
        background: white;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .number-row {
        display: flex;
        justify-content: center;
        gap: 8px;
    }

    .num-btn {
        width: 60px;
        height: 60px;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 6px;
        background: #EEEEEE;
        color: black;
        transition: transform 0.1s ease-in-out;
    }

        .num-btn:hover {
            background: #DDDCDC;
            transform: scale(1.1);
        }
</style>